<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Batch</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
   <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }
        .edit-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            padding: 55px;
            max-width: 1000px;
            margin: 20 auto;
        }
        .form-table {
            width: 100%;
            border-collapse: collapse;
            top: 30px;
        }
        .form-table td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }
        .form-table tr:last-child td {
            border-bottom: none;
        }
        .form-label {
            font-weight: 600;
            min-width: 150px;
        }
        .form-control {
            width: 100%;
            padding: 8px 12px;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }
        .btn {
            padding: 8px 16px;
            border-radius: 4px;
            font-weight: 500;
        }
        @media (max-width: 768px) {
            .form-table, .form-table tbody, .form-table tr, .form-table td {
                display: block;
                width: 100%;
            }
            .form-table tr {
                margin-bottom: 15px;
            }
            .form-table td {
                padding: 8px 0;
                border-bottom: none;
            }
            .form-label {
                display: block;
                margin-bottom: 5px;
            }
        }














 





    </style>
</head>
<body>
    <div class="header">
        <!-- Query Action Button -->
        <div class="query-action">
            <button class="btn btn-info" onclick="toggleSidebar()">Query Action</button>
        </div>
        <!-- Logo -->
        <div class="logo">
            <i class="bi bi-egg"></i> Layers
        </div>
        <!-- User Info and Logout -->
        <div>
            <span id="currentUser">Hello, User</span>
            <button class="btn btn-danger btn-sm" onclick="logout()">Logout</button>
        </div>
    </div>
    
    <!-- Sidebar -->
    <div id="querySidebar" class="query-sidebar">
        <ul>
            <li><a href="/batch"><i class="fas fa-plus-circle"></i> Add Flock</a></li>
            <li><a href="/egg-production"><i class="fas fa-egg"></i> Record Egg Production</a></li>
            <li><a href="/financials"><i class="fas fa-dollar-sign"></i> Financials</a></li>
            <li><a href="#"><i class="fas fa-link"></i> Link 4</a></li>
            <li><a href="eggs.html"><i class="fas fa-pen"></i> Record Egg Production</a></li>
            <li><a href="/visualization"><i class="fas fa-chart-line"></i> Visualization</a></li>
            <li><a href="/report"><i class="fas fa-file-alt"></i> Report</a></li>
            <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
            <li><a href="#"><i class="fas fa-user"></i> Profile</a></li>
            <li><a href="#"><i class="fas fa-download"></i> Downloads</a></li>
        </ul>
    </div>
    <div class="container">
        <div class="edit-container">
            <h2 class="mb-4 text-center">
                <i class="fas fa-edit me-2"></i>Edit Batch <%= batch.batchNo %>
            </h2>
            
            <form action="/batch/update/<%= batch._id %>" method="POST">
                <table class="form-table">
                    <tbody>
                        
                        <tr>
                            <td class="form-label">Grade/Breed</td>
                            <td>
                                <input type="text" class="form-control" name="grade" value="<%= batch.grade %>" required>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Total Number</td>
                            <td>
                                <input type="number" class="form-control" name="totalNumber" value="<%= batch.totalNumber %>" required>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Age (weeks)</td>
                            <td>
                                <input type="number" class="form-control" name="age" value="<%= batch.age %>" required>
                            </td>
                        </tr>
                        <tr>
                            <td class="form-label">Date</td>
                            <td>
                                <input type="date" class="form-control" name="date" 
                                       value="<%= batch.date.toISOString().split('T')[0] %>" required>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="text-end pt-4">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-1"></i>Update Batch
                                </button>
                              
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>



    <script>



function toggleSidebar() {
    const sidebar = document.getElementById('querySidebar');
    const overlay = document.getElementById('overlay');
    sidebar.classList.toggle('open');
    overlay.classList.toggle('active');
}

function logout() {
    alert('Logout clicked!');
    // Add your logout logic here
} 
    </script>
</body>
</html>