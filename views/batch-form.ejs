/* Query Action Button */
/* Query Action Button - adjusted positioning */
.query-action {
  position: relative; /* Changed from absolute */
  left: 0;
  z-index: 1000;
}


.query-action button {
    background-color:red; /* Teal color */
    border: none;
    color: white;
    padding: 4px 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 10px;
    z-index: 1000;
}

.query-action button:hover {
