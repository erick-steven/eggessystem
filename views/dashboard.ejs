// Chart Options
// Base Chart Options
const chartOptions = {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
        legend: { 
            display: true,
            labels: {
                color: '#fff',
                font: { weight: 'bold', size: 14 }
            }
        },
        tooltip: {
            backgroundColor: 'rgba(0, 0, 0, 0.8)',
            titleColor: '#fff',
            bodyColor: '#fff',
            borderColor: '#FF6B00',
            borderWidth: 1,
            padding: 12,
            cornerRadius: 8,
            displayColors: true,
            callbacks: {
                label: context => `${context.dataset.label}: ${context.parsed.y.toLocaleString()}`
            }
        }
    },
    scales: {
        x: {
            grid: { display: false },
            ticks: { color: '#fff', font: { weight: 'bold' } }
        },
        y: {
            grid: { color: 'rgba(255, 255, 255, 0.1)', borderDash: [3, 3] },
            ticks: { 
                color: '#fff',
                font: { weight: 'bold' },
                callback: value => value.toLocaleString()
            },
            beginAtZero: true
        }
    },
    animation: { duration: 1000, easing: 'easeOutQuart' }
};

// Egg Production Chart
let eggChart = new Chart(document.getElementById('eggChart').getContext('2d'), {
    type: 'line',
    data: {
        labels: eggLabels,
        datasets: [{
            label: 'Eggs Produced',
            data: eggData,
            borderColor: '#FF6B00',
            backgroundColor: 'rgba(255, 107, 0, 0.2)',
            borderWidth: 3,
            tension: 0.4,
            pointRadius: 6,
            pointHoverRadius: 9,
            pointBackgroundColor: '#FF6B00',
            pointBorderColor: '#fff',
            pointBorderWidth: 2,
            fill: true
        }]
    },
    options: chartOptions
});

// Financial Performance Chart
let financialChart = new Chart(document.getElementById('financialChart').getContext('2d'), {
    type: 'bar',
    data: {
        labels: financialLabels,
        datasets: [{
            label: 'Profit ($)',
            data: financialData,
            backgroundColor: 'rgba(0, 168, 107, 0.85)',
            hoverBackgroundColor: '#00a86b',
            borderRadius: 8
        }]
    },
    options: {
        ...chartOptions,
        scales: {
            ...chartOptions.scales,
            y: {
                ...chartOptions.scales.y,
                ticks: {
                    ...chartOptions.scales.y.ticks,
                    callback: value => `$${value.toLocaleString()}`
                }
            }
        }
    }
});

