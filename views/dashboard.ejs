    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.5);
}

.query-sidebar.open {
    left: 0; /* Show sidebar */
}

.query-sidebar ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

.query-sidebar li {
    padding: 10px 20px;
