    .table-container {
    position: relative;
    overflow: hidden;
    margin: 20px 0;
    border-radius: 8px;
}

.table-wrapper {
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    margin: 0 40px; /* Space for arrows */
    padding-bottom: 10px; /* Prevents scrollbar from touching content */
}

/* Hide scrollbar but keep functionality */
.table-wrapper::-webkit-scrollbar {
    display: none;
}

.scroll-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 36px;
