        .form-container {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        align-items: center;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1 1 auto;
        min-width: 150px;
        position: relative;
    }

    .search-group {
